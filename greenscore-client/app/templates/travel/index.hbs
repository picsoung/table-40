{{#if togglePoints}}
<div class='points'>
  <div class='to'>
    To: {{input placeholder="Where are you?" valueBinding='fromDest'}}
  </div>

  <div class='from'>
    From: {{input placeholder="Where you going?" valueBinding='toDest'}}
  </div>

  <div class='submitPointsButton'>
    <button {{action "submitPoints"}}>next</button>
  </div>

</div>
{{/if}}

{{#if toggleOptions}}
<div class='options'>
  {{#each travelModes as |travelMode|}}
    {{travel-score
      source=toDest
      destination=fromDest
      travelMode=travelMode
    }}
  {{/each}}
</div>
{{/if}}

{{#if toggleMap}}
<div class='map'>
</div>
{{/if}}

{{#if toggleRate}}
<div class='rate'>

  <div class='submitRateButton'>
    <button {{action "submit"}}>submit</button>
  </div>
</div>
{{/if}}

{{outlet}}
