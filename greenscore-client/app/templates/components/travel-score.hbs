<!-- this is a hack to fetch data -->
{{myDist}}
{{myGreenScore}}

<div class='travel-score'>
  <div class='row'>
    <div class='col-md-6'>
      {{google-map
        source=source
        destination=destination
        travelMode=travelMode
      }}
    </div>
    <div class='col-md-6'>
      <div class='row'>
        GreenScore: {{greenScore}}
      </div>
      <div style='padding:10px'></div>
      <div class='row'>
        Distance: {{myDistText}}
      </div>
      <div style='padding:10px'></div>
      <div class='row'>
        Duration: {{myDur}}
      </div>
      <div style='padding:10px'></div>
      <div class='row'>
        Travel Mode: {{humanizedTravelMode}}
      </div>
      <div style='padding:10px'></div>
      <div class='row'>
        <div class='rate'>
          <button {{action "rated" 3}}>😁 </button>
          <button {{action "rated" 2}}>😀 </button>
          <button {{action "rated" 1}}>🙂 </button>
          <button {{action "rated" 0}}>😐 </button>
          <button {{action "rated" -1}}>🙁 </button>
          <button {{action "rated" -2}}>☹️ </button>
          <button {{action "rated" -3}}>😭 </button>
        </div>
      </div>
    </div>
  </div>
</div>
